{% extends 'base.html.twig' %}

{% block content %}

	<!-- faire un include d'un header correspondant //logout -->
	{% include "user_profile/includes/headerProfile.html.twig" %}

	<section class="site-section">
		<div class="container">
			<div class="row">
				<div class="col-md-5 mr-auto">
					<div class="text-left heading-wrap mb-5">
						<h2 class="mt-0 mb-5">Hello
							{{ app.user.firstname }}
						</h2>
						<h3 class="mt-0 mb-5">Votre Yogi-Family</h3>

						<!-- on affiche chaque membre de la table Membre ds la database -->
						{% for m in app.user.member %}
							<div class="mt-0 mb-5">
								<p>{{m.firstname}}
									né(e) le
									{{m.age|date('d/m/Y')}}</p>
								<!--ajouter l'age et une image-->
							</div>
						{% endfor %}

						<!-- formulaire pour créer/insérer un membre [rattaché au user] ds la db -->


						<p>
							<a class="btn btn-primary" data-toggle="collapse" href="#collapseMembre" role="button" aria-expanded="false" aria-controls="collapseMembre">
								Modifier votre famille
							</a>
						</p>

						<div class="collapse" id="collapseMembre">
							<div class="card card-body">
								{{ form_start(formulaire, {'class' : 'form-group'}) }}
								{{ form_row(formulaire.firstname, {'label' : 'Prénom'}) }}
								{{ form_row(formulaire.age, {'label' : 'Date de naissance'}) }}
								<input type="submit" class="btn btn-primary" value="Envoyer"/>
								{{ form_end(formulaire)}}
							</div>
						</div>

					</div>


				</div>
				<div class="col-md-6 position-relative align-self-center">
					<img src="{{ asset ('assets/images/kids-yoga.jpg') }}" alt="Image" class="img-overlap-1">
					<img src="{{ asset ('assets/images/babies-doing-yoga.jpg') }}" alt="Image" class="img-overlap-2">
				</div>
			</div>
		</div>

	</section>

	{% block custom_js %}
		<script>
			$('#collapseMembre').collapse({toggle: false})
		</script>
	{% endblock %}
	<!-- ajouter ici les cours de yoga dispo filtres selon age -->
{% endblock %}
